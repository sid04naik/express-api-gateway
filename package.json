{
  "name": "express-api-gateway",
  "version": "1.0.1",
  "description": "Fully loaded express api-gateway",
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=dev nodemon index.js",
    "nginx:routes": "node ./bin/nginx-routes.js",
    "nginx:gateway": "node ./bin/nginx-gateway.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prettier": "prettier --check .",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "perf:dashboard": "k6 run --out influxdb=http://localhost:8086/k6 tests/performance/index.js",
    "perf": "k6 run tests/performance/index.js"
  },
  "keywords": [
    "express",
    "express.js",
    "api-gateway",
    "express-gateway",
    "express-api-gateway"
  ],
  "author": "Siddhant Naik",
  "license": "GNU",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-slow-down": "^2.0.3",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "js-yaml": "^4.1.0",
    "prom-client": "^15.1.3",
    "useragent": "^2.3.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  },
  "homepage": "https://github.com/sid04naik/express-api-gateway#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sid04naik/express-api-gateway.git"
  }
}
